{
  "compilerOptions": {
    /* Básico */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",

    /* Paths y resolución */
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,

    /* Strict mode para mejor tipado */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Compatibilidad con imports */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Output */
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": ["src", "src/**/*.ts", "src/**/*.tsx", "**/*.test.ts", "**/*.test.tsx", "e2e/**/*.ts"],
  "exclude": ["node_modules"]
}
